    @model _2001207328_NguyenDuyThinh.Areas.admin.Models.deviceDetail
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <h3>@Model.detailD.TenDevice</h3>
    <hr />
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="col-md-1">hình ảnh</th>
                    <th>Chất liệu</th>
                    <th>Kích thước</th>
                    <th>Đặc điểm</th>
                    <th>Màu sắc </th>
                    <th>Giá</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.sheet)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("ThemGiohang","GioHang",new { @iMaDevice = @i.MaDev,@MaChiTiet = @i.MaChiTiet,@strURL = Request.Url.ToString()})">Đặt mua</a>
                        </td>
                        <td class="col-md-1"><img src="~/image/DEVICE/@Model.detailD.AnhBia" style="width:100%" /></td>
                        <td>@i.ChatLieu</td>
                        <td style="background-color:@i.MauSac"></td>
                        <td>@i.DacDiem</td>
                        <td style="color:#0026ff">@i.KichThuoc</td>
                        <td><h3 style="color:red">Giá: @String.Format("{0:0,0}", @i.Gia * 22000) VND</h3></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

